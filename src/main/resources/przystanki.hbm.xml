<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pl.mzk.bielsko.Przystanki" table="przystanki">
        <meta attribute="class-description">
            This class contains bus stops
        </meta>
        <id name="id" type="integer" column="id">
            <generator class="increment"/>
        </id>
        <property name="ulica" column="ulica" type="char"/>
        <property name="nazwa" column="nazwa" type="char"/>
        <property name="numer_linii" column="numer_linii" type="integer"/>
        <property name="relacja" column="relacja" type="char"/>
        <property name="kierunek" column="kierunek" type="text"/>
        <many-to-one name="linia" column="numer_linii" not-null="true"/>
    </class>
</hibernate-mapping>